.sign-up-form.fight-navbar-margin
  .container
    .col-md-4
      / User Sign Up Form
      = form_for @user, :url => users_path do |f|
        .panel.panel-info
          .panel-heading
            Sign Up
          .panel-body
            / Error Messages
            - if flash.now[:alert]
              %span
                = flash.now[:alert]
              %br
              %ul.list-unstyled
                - @user.errors.full_messages.each do |msg|
                  %li
                    = msg
            / Fields
            = f.text_field :email, :class => "form-control", :placeholder => "Email"
            = f.text_field :email_confirmation, :class => "form-control", :placeholder => "Confirm Email"
            %hr
            = f.password_field :password, :class => "form-control", :placeholder => "Password"
            = f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password"
            %hr
            .row
              .col-md-6
                = link_to "Go to Log In", login_path
              .col-md-6.text-right
                = link_to "SpaceMaker", root_path
          .panel-footer
            = f.submit "Sign Up", :class => "btn btn-primary"
        