.sign-up-form
  .container
    .col-md-4.col-md-offset-4
      / User Sign Up Form
      = form_for @user, :url => users_path do |f|
        .panel.panel-default.modern
          .panel-heading.text-center
            %h3
              SpaceLender
          .panel-body
            / Error Messages
            - if flash.now[:alert]
              %span
                = flash.now[:alert]
              %br
              %ul.list-unstyled
                - @user.errors.full_messages.each do |msg|
                  %li
                    = msg
            / Fields
            .row
              .col-md-6
                .row
                  = f.text_field :first_name, :class => "form-control", :placeholder => "First Name"
                  %span.glyphicon.glyphicon-exclamation-sign.error
              .col-md-6
                .row
                  = f.text_field :last_name, :class => "form-control", :placeholder => "Last Name"
                  %span.glyphicon.glyphicon-exclamation-sign.error
            .row
              = f.text_field :email, :class => "form-control", :placeholder => "Email"
              %span.glyphicon.glyphicon-exclamation-sign.error
            .row
              = f.text_field :email_confirmation, :class => "form-control", :placeholder => "Confirm Email"
              %span.glyphicon.glyphicon-exclamation-sign.error
            .row
              = f.password_field :password, :class => "form-control", :placeholder => "Password"
              %span.glyphicon.glyphicon-exclamation-sign.error
            .row
              = f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password"
              %span.glyphicon.glyphicon-exclamation-sign.error
          .panel-footer
            = f.submit "Sign Up", :class => "btn btn-primary form-control"
    .col-md-4.col-md-offset-4
      .row
        .col-md-6
          = link_to "Go to Log In", login_path
        .col-md-6.text-right
          = link_to "SpaceLender", root_path, :class => "squiggly"
        