.sign-up-form
  .container
    .col-md-4.col-md-offset-4
      / User Sign Up Form
      = form_for @user, :url => users_path do |f|
        .panel.panel-default.modern
          .panel-heading.text-center
            %h3
              SpaceLender
          .panel-body
            / Error Messages
            - if flash.now[:alert]
              .col-md-12.error.text-center
                = flash.now[:alert]
              %br
              %ul.list-unstyled.error.text-center
                - @user.errors.full_messages.each do |msg|
                  %li
                    = msg
            / Fields
            .row
              .col-md-6
                .row
                  = f.text_field :first_name, :class => "form-control", :placeholder => "First Name"
              .col-md-6
                .row
                  = f.text_field :last_name, :class => "form-control", :placeholder => "Last Name"
            .row
              = f.text_field :email, :class => "form-control", :placeholder => "Email"
            .row
              = f.text_field :email_confirmation, :class => "form-control", :placeholder => "Confirm Email"
            .row
              = f.password_field :password, :class => "form-control", :placeholder => "Password"
            .row
              = f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password"
            .row.padded
              = f.check_box :tos
              %small
                I have have read and agree to the
                = link_to "Terms of Service"
                and
                = link_to "Stripe Connect Platform Agreement", "https://stripe.com/connect/terms"
          .panel-footer
            = f.submit "Sign Up", :class => "btn btn-primary form-control"
    #registration-errors.col-md-4.error
      %ul
    .col-md-4.col-md-offset-4
      .row
        .col-md-6
          = link_to "Go to Log In", login_path
        .col-md-6.text-right
          = link_to "SpaceLender", root_path, :class => "squiggly"

= render 'layouts/footer'

        