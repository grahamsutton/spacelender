.login-form
  .container
    .col-md-4
      / User Sign Up Form
      = form_tag(sessions_create_path) do
        .panel.panel-default
          .panel-heading
            Log In
          .panel-body
            = flash.now[:alert]
            = text_field_tag :email, nil, :class => "form-control", :placeholder => "Username"
            = password_field_tag :password, nil, :class => "form-control", :placeholder => "Password"
            .row
              .col-md-6
                %small
                  = link_to "Click here to Register", registration_path
              .col-md-6.text-right
                %small
                  = link_to "Forgot your password?"
          .panel-footer
            = submit_tag "Login", :class => "btn btn-primary"