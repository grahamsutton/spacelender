%nav.navbar.navbar-default{:class => ("navbar-homepage" unless !current_page?(root_path))}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      - if !current_page?(root_path)
        = link_to "SpaceLender", root_path, :class => "navbar-brand"
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      - if !current_page?(root_path)
        = form_tag(listings_search_path,:class => 'navbar-form navbar-left')  do
          .form-group
            = text_field_tag :search, nil, :id => "nav-search-bar", :class => "form-control", :placeholder => "Search"
          %button#nav-search-bar-btn.btn.btn-default{:type => "submit"}
            %span.glyphicon.glyphicon-search
      %ul.nav.navbar-nav.navbar-right
        - if @current_user
          %li
            = link_to messages_path do
              %i.fa.fa-inbox.fa-lg.fa-fw
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = @current_user.first_name
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to new_listing_path do
                  %i.fa.fa-plus-square-o.fa-lg.fa-fw
                  &nbsp; New Listing
              %li.divider
              %li
                = link_to root_path do
                  %i.fa.fa-calendar-o.fa-lg.fa-fw
                  &nbsp; Schedule
              %li
                = link_to listings_path do
                  %i.fa.fa-newspaper-o.fa-lg.fa-fw
                  &nbsp; My Listings
              %li.divider
              %li
                = link_to logout_path do
                  %i.fa.fa-sign-out.fa-lg.fa-fw
                  &nbsp; Log Out
        - else
          %li
            = link_to "Register", "#registration", :class => "link_to_form"
          %li
            = link_to "Login", "#login", :class => "link_to_form"

